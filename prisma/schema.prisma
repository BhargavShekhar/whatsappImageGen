generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  phone     String   @unique
  createdAt DateTime @default(now())

  prompts      Prompt[]
}

model Prompt {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  raw_text       String
  processed_text String

  tags String[]

  embedding   Unsupported("vector(1536)")?
  requestType RequestType                  @default(SINGLE)

  createdAt DateTime @default(now())

  images Image[]
}

model Image {
  id String @id @default(uuid())

  promptId String
  prompt   Prompt @relation(fields: [promptId], references: [id])

  base_s3_url String @unique

  createdAt DateTime @default(now())
}

enum RequestType {
  SINGLE
  BULK
  SCHEDULED
}